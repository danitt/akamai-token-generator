{
  "name": "@danitt/akamai-auth-token",
  "version": "2.0.3",
  "description": "A sample library for generating akamai auth token",
  "author": "danitt <dan@staykind.io>",
  "license": "MIT",
  "private": false,
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/danitt/akamai-token-generator.git"
  },
  "type": "module",
  "engines": {
    "node": ">=22.14.0 <23",
    "npm": ">=10.9.2 <11"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "start": "tsx src/index",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "format": "npm run lint -- --fix",
    "lint": "eslint --config eslint.config.mjs --max-warnings=0 .",
    "lint:tsc": "tsc --noEmit",
    "prepublish": "npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@eslint/js": "9.25.1",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import-x": "^4.11.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "~5.3.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2"
  },
  "keywords": [
    "akamai",
    "edge",
    "auth",
    "token"
  ]
}
